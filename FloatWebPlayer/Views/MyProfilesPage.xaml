                <!-- æ’ä»¶åˆ—è¡¨ -->
                <ItemsControl x:Name="PluginList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource PluginCardStyle}">
