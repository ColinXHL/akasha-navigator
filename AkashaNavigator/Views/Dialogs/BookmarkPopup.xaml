<helpers:AnimatedWindow x:Class="AkashaNavigator.Views.Dialogs.BookmarkPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:AkashaNavigator.Helpers"
        Title="收藏夹"
        Width="450"
        Height="450"
        WindowStartupLocation="CenterScreen"
        Foreground="White"
        ResizeMode="NoResize">
    
    <!-- 主容器带边框 -->
    <Border x:Name="MainContainer" Background="#1E1E1E" BorderBrush="#333" BorderThickness="1" CornerRadius="8"
            RenderTransformOrigin="0.5,0.5" Opacity="0">
        <Border.RenderTransform>
            <ScaleTransform ScaleX="0.96" ScaleY="0.96"/>
        </Border.RenderTransform>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Border Grid.Row="0" Background="#252525" CornerRadius="8,8,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="⭐ 收藏夹" FontSize="14" FontWeight="SemiBold" 
                               Foreground="#EEE" VerticalAlignment="Center" Margin="16,0"/>
                    <Button Style="{StaticResource WindowCloseButtonStyle}"
                            HorizontalAlignment="Right" VerticalAlignment="Top"
                            Click="BtnClose_Click"/>
                </Grid>
            </Border>

            <!-- 内容区 -->
            <Grid Grid.Row="1" Margin="10,10,10,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 搜索栏 -->
                <Grid Grid.Row="0" Margin="0,5,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="SearchBox"
                             Grid.Column="0"
                             Style="{StaticResource SearchBoxStyle}"
                             Tag="搜索收藏夹..."
                             TextChanged="SearchBox_TextChanged"/>
                    <Button Grid.Column="1" Content="清空全部" Style="{StaticResource DeleteButtonStyle}"
                            Margin="10,0,0,0" Click="BtnClearAll_Click"/>
                </Grid>

                <!-- 收藏列表容器 -->
                <Border Grid.Row="1"
                        Background="#252525"
                        BorderBrush="#333"
                        BorderThickness="1"
                        CornerRadius="4">
                    <Grid>
                        <!-- 收藏列表 -->
                        <ListBox x:Name="BookmarkList"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 ItemContainerStyle="{StaticResource DarkListBoxItemStyle}"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 MouseDoubleClick="BookmarkList_MouseDoubleClick">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="★" FontSize="14" Foreground="#FFD700"
                                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Title}" FontSize="14" Foreground="White" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding Url}" FontSize="11" Foreground="#888" TextTrimming="CharacterEllipsis" Margin="0,2,0,0"/>
                                        </StackPanel>
                                        <Button Grid.Column="2" Content="✕" Style="{StaticResource ActionButtonStyle}"
                                                FontSize="12" Padding="8,4" Tag="{Binding Id}" Click="BtnDelete_Click"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <!-- 空状态提示 -->
                        <TextBlock x:Name="EmptyHint" Text="暂无收藏" Foreground="#888" FontSize="14"
                                   HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</helpers:AnimatedWindow>
