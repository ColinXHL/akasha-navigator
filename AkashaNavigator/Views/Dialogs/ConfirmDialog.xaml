<helpers:AnimatedWindow x:Class="AkashaNavigator.Views.Dialogs.ConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:AkashaNavigator.Helpers"
        Title="确认"
        Width="360"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        Foreground="White"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False">

    <!-- 主容器 - 用于动画 -->
    <Border x:Name="MainContainer" Background="#2D2D2D" CornerRadius="8" RenderTransformOrigin="0.5,0.5">
        <Border.RenderTransform>
            <ScaleTransform x:Name="ContainerScale" ScaleX="1" ScaleY="1"/>
        </Border.RenderTransform>
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.6" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- 标题栏 -->
                <RowDefinition Height="*"/>     <!-- 内容区 -->
                <RowDefinition Height="Auto"/>  <!-- 按钮区 -->
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Border Grid.Row="0" Background="#252525" CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Margin="16,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>  <!-- 图标 -->
                        <ColumnDefinition Width="*"/>     <!-- 标题 -->
                        <ColumnDefinition Width="Auto"/>  <!-- 关闭按钮 -->
                    </Grid.ColumnDefinitions>

                    <!-- 图标 -->
                    <TextBlock x:Name="IconText" Grid.Column="0"
                               Text="?" FontSize="16"
                               Foreground="#0078D4"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>

                    <!-- 标题 - 使用数据绑定 -->
                    <TextBlock x:Name="TitleText" Grid.Column="1"
                               Text="{Binding Title}"
                               FontSize="14" FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"/>

                    <!-- 关闭按钮 - 使用命令绑定 -->
                    <Button Grid.Column="2"
                            Style="{StaticResource DialogCloseButtonStyle}"
                            Command="{Binding CloseCommand}"/>
                </Grid>
            </Border>

            <!-- 内容区 - 使用数据绑定 -->
            <Border Grid.Row="1" Padding="20,16">
                <TextBlock x:Name="MessageText"
                           Text="{Binding Message}"
                           FontSize="13"
                           Foreground="#DDD"
                           TextWrapping="Wrap"
                           LineHeight="20"/>
            </Border>

            <!-- 按钮区 - 使用命令绑定 -->
            <Border Grid.Row="2" Background="#252525" CornerRadius="0,0,8,8" Padding="16,12">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <!-- 确定按钮 -->
                    <Button x:Name="BtnConfirm"
                            Content="{Binding ConfirmText}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding ConfirmCommand}"
                            Margin="0,0,8,0"/>

                    <!-- 取消按钮 -->
                    <Button x:Name="BtnCancel"
                            Content="{Binding CancelText}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding CancelCommand}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</helpers:AnimatedWindow>
