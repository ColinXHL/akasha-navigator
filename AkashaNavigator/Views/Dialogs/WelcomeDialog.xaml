<helpers:AnimatedWindow x:Class="AkashaNavigator.Views.Dialogs.WelcomeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:AkashaNavigator.Helpers"
        xmlns:vm="clr-namespace:AkashaNavigator.ViewModels.Dialogs"
        Title="欢迎使用"
        Width="420"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        Foreground="White"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False">

    <helpers:AnimatedWindow.Resources>
        <!-- 主按钮样式 - 覆盖全局样式以使用更大的 padding -->
        <Style x:Key="WelcomePrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Padding" Value="24,10"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </helpers:AnimatedWindow.Resources>

    <!-- 主容器 -->
    <Border x:Name="MainContainer" Background="#2D2D2D" CornerRadius="8" RenderTransformOrigin="0.5,0.5">
        <Border.RenderTransform>
            <ScaleTransform x:Name="ContainerScale" ScaleX="1" ScaleY="1"/>
        </Border.RenderTransform>
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.6" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- 标题栏 -->
                <RowDefinition Height="*"/>     <!-- 内容区 -->
                <RowDefinition Height="Auto"/>  <!-- 按钮区 -->
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Border Grid.Row="0" Background="#252525" CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Margin="16,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 图标 -->
                    <TextBlock Grid.Column="0" Text="🎉" FontSize="16"
                               VerticalAlignment="Center" Margin="0,0,10,0"/>

                    <!-- 标题 -->
                    <TextBlock Grid.Column="1" Text="欢迎使用 AkashaNavigator"
                               FontSize="14" FontWeight="SemiBold"
                               Foreground="White" VerticalAlignment="Center"/>

                    <!-- 关闭按钮 -->
                    <Button Grid.Column="2"
                            Style="{StaticResource DialogCloseButtonStyle}"
                            Command="{Binding CloseCommand}"/>
                </Grid>
            </Border>

            <!-- 内容区 -->
            <Border Grid.Row="1" Padding="24,20">
                <StackPanel>
                    <!-- 应用图标 -->
                    <Image Source="/Assets/akasha-navigator-logo.png" Width="80" Height="80" 
                           RenderOptions.BitmapScalingMode="HighQuality"
                           HorizontalAlignment="Center" Margin="0,0,0,16"/>
                    
                    <!-- 开源免费提示 -->
                    <TextBlock Text="虚空导航" FontSize="18" FontWeight="Bold" 
                               Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                    
                    <TextBlock TextWrapping="Wrap" FontSize="13" Foreground="#BBB" 
                               LineHeight="22" TextAlignment="Center" Margin="0,0,0,12">
                        AkashaNavigator 是一款完全开源免费的悬浮攻略播放器，
                        <LineBreak/>
                        专为游戏时观看攻略视频设计。
                    </TextBlock>

                    <!-- 防诈骗提示 -->
                    <Border Background="#3D1F1F" CornerRadius="4" Padding="12,8" Margin="0,0,0,16">
                        <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#FF6B6B" 
                                   LineHeight="18" TextAlignment="Center">
                            ⚠️ 本软件完全免费，如在任何渠道被要求付费，请立即举报！
                            <LineBreak/>
                            唯一官方下载地址：GitHub 仓库
                        </TextBlock>
                    </Border>

                    <!-- 分隔线 -->
                    <Border Height="1" Background="#3C3C3C" Margin="0,0,0,16"/>

                    <!-- Star 请求 -->
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="⭐ 如果觉得好用，欢迎给个 Star 支持一下！" 
                                   FontSize="13" Foreground="#FFD700" 
                                   HorizontalAlignment="Center" Margin="0,0,0,12"/>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="GitHub 仓库：" FontSize="13" Foreground="#888"
                                       VerticalAlignment="Center"/>
                            <Button Content="{Binding GitHubRepositoryName}"
                                    Style="{StaticResource LinkButtonStyle}"
                                    Command="{Binding OpenGitHubCommand}"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 按钮区 -->
            <Border Grid.Row="2" Background="#252525" CornerRadius="0,0,8,8" Padding="16,12">
                <Button Content="开始使用"
                        Style="{StaticResource WelcomePrimaryButtonStyle}"
                        HorizontalAlignment="Center"
                        Command="{Binding StartCommand}"/>
            </Border>
        </Grid>
    </Border>
</helpers:AnimatedWindow>
